{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "platform-terminal": {
      "projectType": "library",
      "root": "projects/platform-terminal",
      "sourceRoot": "projects/platform-terminal/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/platform-terminal/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/platform-terminal/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/platform-terminal/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        }
      }
    },
    "playground": {
      "projectType": "application",
      "root": "projects/playground",
      "sourceRoot": "projects/playground/src",
      "prefix": "app"
    }
  }
}
