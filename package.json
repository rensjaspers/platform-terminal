{
  "name": "platform-terminal",
  "version": "0.1.0",
  "description": "Angular platform for terminal rendering using neo-blessed",
  "scripts": {
    "ng": "ng",
    "build:lib": "ng build platform-terminal",
    "build:playground": "tsc -p projects/playground/tsconfig.app.json",
    "start": "npm run build:lib && npm run build:playground && node dist/playground/main.js",
    "debug": "npm run build:lib && npm run build:playground && node --inspect-brk dist/playground/main.js",
    "test": "ng test",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "blessed": "npm:neo-blessed@^0.2.0",
    "neo-blessed": "^0.2.0",
    "blessed-contrib": "^4.11.0",
    "rxjs": "^7.8.1",
    "tslib": "^2.8.1",
    "zone.js": "^0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.0.0",
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@types/blessed": "^0.1.25",
    "@types/node": "^22.10.2",
    "ng-packagr": "^21.0.0",
    "typescript": "~5.9.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
